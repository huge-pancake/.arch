include config.d/mocha.conf

# Appearances
# target                 title     bg    text   indicator  border
client.focused           $blue     $base $text  $rosewater $blue
client.focused_inactive  $overlay0 $base $text  $rosewater $base
client.unfocused         $overlay0 $base $text  $rosewater $base
client.urgent            $peach    $base $peach $overlay0  $peach
client.placeholder       $overlay0 $base $text  $overlay0  $base
client.background        $base

default_border pixel 3
default_floating_border pixel 3
gaps inner 5
gaps outer 5

# Monitor
output eDP-1 scale 1
output * bg ~/.local/share/backgrounds/Bridge.jpg fill

xwayland enabled
seat * hide_cursor 8000
seat * hide_cursor when-typing enable

bindswitch --reload --locked lid:on output eDP-1 disable
bindswitch --reload --locked lid:off output eDP-1 enable

# Devices
input type:keyboard {
  xkb_layout us
  repeat_delay 300
  repeat_rate 30
}

input type:touchpad {
  dwt enabled
  accel_profile adaptive
  pointer_accel 0
  tap enabled
  dwt disabled
  natural_scroll enabled
  middle_emulation enabled
}

include config.d/rules.conf
include config.d/keymaps.conf
include config.d/autostart.conf
